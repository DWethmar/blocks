{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/",
        "baseUrl": "src",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ]
    },
    "include": [
        "./vendor/noisejs/perlin.js",
        "./vendor/wasm/wasm_exec.js"
    ]
}
